# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET	    /test/:name/:count          controllers.Test.nameCount(name, count: Int)
GET     /interviews/:questionnaireId/intro          controllers.Interview.interviewIntro(questionnaireId)
GET     /interviews/:questionnaireId/start          controllers.Interview.startInterview(questionnaireId)
GET     /interviews/:questionnaireId/ask/:nodeId    controllers.Interview.askNode(questionnaireId, nodeId)
POST    /interviews/:questionnaireId/ask/:nodeId    controllers.Interview.answer(questionnaireId, nodeId)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
