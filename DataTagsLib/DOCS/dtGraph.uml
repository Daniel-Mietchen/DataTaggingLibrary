@startuml

package reference {
	class NodeRef {

	}

	class InstructionNodeRef {
		+ head : HeadRef
	}

	class SimpleNodeRef {
		+ body: String;
	}

	class CompoundNodeRed {
		+ body: List<NodeRef>
	}

	class HeadRef {
		+ id: String
		+ name: String
	}

	class TermNodeRef {
		+ term : String
		+ explanation: String
	}

	NodeRef <|-- TermNodeRef
	NodeRef <|-- InstructionNodeRef
	InstructionNodeRef <|-- SimpleNodeRef
	InstructionNodeRef <|-- CompoundNodeRed

	InstructionNodeRef "1" -> HeadRef

}


@enduml